<td><%= i.created_at %></td>
<tr>

<% end %></h3>

</table>

<h4 align =center ><%= link_to 'view all', :action => 'view_all', :id => @club_id%>
<%= link_to 'new topic', :action => 'newtopic', :id => @club_id %></h4>
    <%= yield %>
</div>
</div>
</body>
</html>
