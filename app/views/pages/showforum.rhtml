<h1></h1>
<html>
<title></title>
<body><div id="container">
<div id="sidemenu" class="depot-form" >

<strong><h4><%= @name1 %></h4>
<img src="<%= url_for(:controller =>'pictures',:action => 'picture', :id => @club.picture_id) %>" height=100 />
<h4><%= @club.caption %></h4>
<h4>Forums :<%= @count1 %> 
</h4></strong>

<%= error_messages_for 'rate' %>
<% form_tag ({:action => 'rate1', :id => @club.id}) do %>    

